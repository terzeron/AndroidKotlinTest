<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.terzeron.a14fragmenttest.MainActivity">


    <fragment
        android:id="@+id/toolbar_fragment"
        android:name="net.terzeron.a14fragmenttest.ToolbarFragment"
        android:layout_width="0dp"
        android:layout_height="225dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/toolbar_fragment" />

    <fragment
        android:id="@+id/text_fragment"
        android:name="net.terzeron.a14fragmenttest.TextFragment"
        android:layout_width="0dp"
        android:layout_height="291dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_fragment"
        tools:layout="@layout/text_fragment" />
</android.support.constraint.ConstraintLayout>
